<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_degrade"
    android:gravity="center"
    tools:context="rodolfoizidoro.instagramclone.activity.CadastroActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/usuario" />

        <EditText
            android:id="@+id/etNomeUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/fundo_caixa_texto"
            android:ems="10"
            android:hint="Nome usuÃ¡rio"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/etNomeUsuario"
            android:layout_alignLeft="@+id/etNomeUsuario"
            android:layout_alignRight="@+id/etNomeUsuario"
            android:layout_alignStart="@+id/etNomeUsuario"
            android:layout_below="@+id/etNomeUsuario"
            android:layout_marginTop="18dp"
            android:background="@drawable/fundo_caixa_texto"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/etSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/etEmail"
            android:layout_alignLeft="@+id/etEmail"
            android:layout_alignRight="@+id/etEmail"
            android:layout_alignStart="@+id/etEmail"
            android:layout_below="@+id/etEmail"
            android:layout_marginTop="15dp"
            android:background="@drawable/fundo_caixa_texto"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <Button
            android:id="@+id/btCadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/etSenha"
            android:layout_alignLeft="@+id/etSenha"
            android:layout_alignRight="@+id/etSenha"
            android:layout_alignStart="@+id/etSenha"
            android:layout_below="@+id/etSenha"
            android:layout_marginTop="23dp"
            android:background="@drawable/fundo_botao"
            android:text="Cadastrar" />
    </RelativeLayout>
</RelativeLayout>